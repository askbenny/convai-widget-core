{
  "name": "@askbenny/convai-widget-core",
  "version": "1.2.8",
  "description": "The common library for the Conversational AI Widget Wrapper for elevenlabs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "type": "module",
  "scripts": {
    "generate-version": "printf \"// This file is auto-generated during build\\nexport const PACKAGE_VERSION = \\\"%s\\\";\\n\" \"$npm_package_version\" > src/version.ts",
    "postinstall": "npm run generate-version",
    "prebuild": "npm run generate-version",
    "build": "vite build && tsc --declaration --emitDeclarationOnly",
    "build:analyze": "ANALYZE=true vite build",
    "dev": "npm run generate-version && vite",
    "lint": "npm run lint:ts && npm run lint:es && npm run lint:prettier",
    "lint:ts": "tsc --noEmit --skipLibCheck",
    "lint:es": "npx eslint .",
    "lint:prettier": "prettier 'src/**/*.ts' --check",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "lint:fix": "npm run lint:ts && npx eslint . --fix && prettier 'src/**/*.ts' --write",
    "test": "vitest",
    "npm:view": "npm view @askbenny/convai-widget-embed",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "version:prerelease": "npm version prerelease --preid=beta"
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "ElevenLabs",
  "license": "MIT",
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@types/preact-custom-element": "^4.0.4",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/browser": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "msw": "^2.12.4",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-bundle-analyzer": "^1.3.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@elevenlabs/client": "^0.12.1",
    "@preact/signals": "^2.5.1",
    "clsx": "^2.1.1",
    "preact": "^10.28.0",
    "preact-custom-element": "^4.6.0",
    "tailwind-merge": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/askbenny/convai-widget-core.git",
    "directory": "packages/convai-widget-core"
  }
}
